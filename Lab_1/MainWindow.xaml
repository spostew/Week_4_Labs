<Window x:Class="Lab_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name= "firstNameTextBox" HorizontalAlignment="Left" Height="23" Margin="206,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name ="lastNameTextbox" HorizontalAlignment="Left" Height="23" Margin="206,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="firstNameLabel" Content="First Name" HorizontalAlignment="Left" Margin="122,118,0,0" VerticalAlignment="Top" Height="23"/>
        <Label x:Name="lastNameLabel" Content="Last Name" HorizontalAlignment="Left" Margin="122,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.49,0.477" Height="23"/>
        <Button x:Name ="pigLatinButton"  Content="Click to Generate Pig Latin Name" HorizontalAlignment="Left" Margin="122,256,0,0" VerticalAlignment="Top" Width="211" Click="pigLatinButton_Click"/>

    </Grid>
</Window>
